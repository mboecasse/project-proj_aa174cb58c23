# Environment Variables Template
# Critical: Use EXACT variable names for consistency
# Use descriptive comments to explain each variable
# Provide realistic placeholder values

NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/genesis_platform_db
MONGODB_USERNAME=
MONGODB_PASSWORD=

# JWT Authentication Secrets (CRITICAL: Use long, complex secrets)
JWT_ACCESS_SECRET=your_extremely_long_and_complex_access_secret_here_minimum_64_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your_extremely_long_and_complex_refresh_secret_here_minimum_64_chars
JWT_REFRESH_EXPIRY=7d

# Email Configuration (for verification, password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password
EMAIL_FROM=noreply@yourplatform.com

# Security Settings
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Logging and Monitoring
LOG_LEVEL=info
SENTRY_DSN=  # Optional error tracking

# Optional: Third-Party Integrations
STRIPE_SECRET_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Development/Staging/Production Flags
IS_PRODUCTION=false
ENABLE_SWAGGER=true
DEBUG_MODE=false
